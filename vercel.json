{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/"
        }
    ],
    "crons": [
        {
            "path": "/api/scrape",
            "schedule": "0 10 * * *"
        }
    ]
}